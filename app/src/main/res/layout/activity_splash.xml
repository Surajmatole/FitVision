<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black2"
    tools:context=".splashActivity">

    <ImageView

        android:id="@+id/ivMainlogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/fitvisionyellow" />

    <TextView
        android:id="@+id/tvsplashtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivMainlogo"
        android:layout_centerInParent="true"
        android:fontFamily="@font/black_han_sans"
        android:text="FitVision"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tvsplashtitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvsplashtitle"
        android:layout_centerInParent="true"
        android:fontFamily="@font/bree_serif"
        android:text="Your Hard work our traning.."
        android:textColor="@color/orange"
        android:textSize="20sp"
        android:layout_marginTop="15dp"/>

</RelativeLayout>
